<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Content</title>
    <script src="/signup_handling.js"></script>
</head>
<body>
    <header>
        <%- include('../nav') %>
    </header>
    
    <div class="container mt-5">
        <%= student.username %>
        <br>
        <%= student.email %>
        <br>
        <%= uni_name %>
        <br>
        <%= department_name %>
        <h2>File: <%= file.fileName %></h2>
        <div class="file-content">
            <% if (file.mimeType === 'application/pdf') { %>
                <embed src="/serveFile/<%= file.id %>" type="<%= file.mimeType %>" width="100%" height="100%">
            <% } else if (file.mimeType === 'text/plain') { %>
                <pre><%= Buffer.from(file.fileData).toString('utf-8') %></pre>
            <% } else if (file.mimeType === 'application/vnd.openxmlformats-officedocument.wordprocessingml.document') { %>
                <iframe src="/serveFile/<%= file.id %>" width="100%" height="100%"></iframe>
            <% } %>
        </div>
        <div class="mt-3">
            <button class="btn btn-success" data-id="<%= student.id %>" data-action="approve">Approve</button>
            <button class="btn btn-danger" data-id="<%= student.id %>" data-action="reject">Reject</button>
        </div>
    </div>
</body>
</html>
