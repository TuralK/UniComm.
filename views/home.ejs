<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UniComm</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
  <link rel="stylesheet" href="/home.css">
</head>
<body>
  <nav class="nav" id="topNav">
    <div class="nav__container">
      <a href="/" class="nav__logo">UniComm</a>
      <ul class="nav__menu">
        <li class="nav__item"><a href="/" class="nav__link">Home</a></li>
        <% if (user) { %>
          <% if (userType === 'student') { %>
            <li class="nav__item"><a href="/profile" class="nav__link">Profile</a></li>
          <% } else if (userType === 'admin') { %>
            <li class="nav__item"><a href="/profile" class="nav__link">Profile</a></li>
            <li class="nav__item"><a href="/displayFiles" class="nav__link">Registration Verification</a></li>
          <% } %>
          <li class="nav__item"><a href="/logout" class="nav__link">Logout</a></li>
        <% } else { %>  
          <li class="nav__item"><a href="/login" class="nav__link">Login</a></li>
          <li class="nav__item"><a href="/register" class="nav__link">Register</a></li>
        <% } %>
      </ul>
    </div>
  </nav>

  <main class="main">
    <div class="main__content">
      <h1 class="main__title">Universities</h1>
      <input type="text" id="search" class="search__input" placeholder="Search for a university...">
      <div class="universities" id="university-list">
        <% universities.forEach(function(university) { %>
          <div class="university" data-name="<%= university.uni_name.toLowerCase() %>"> 
            <img src="/placeholder.png" alt="<%= university.uni_name %> logo" class="logo_img" data-id="<%= university.uni_id %>">
            <a href="/university/<%= university.uni_id %>" class="university__link"><%= university.uni_name %></a>
          </div>
        <% }); %>
      </div>
    </div>
  </main>

  <script src="/home.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const logoImages = document.querySelectorAll('.logo_img');
      logoImages.forEach(img => {
        const uniId = img.getAttribute('data-id');
        const tempImg = new Image();
        tempImg.src = `/${uniId}.png`; // Assuming the images are in the /uni_logo directory

        // Replace placeholder with actual image once loaded
        tempImg.onload = () => {
          img.src = tempImg.src;
        };
      });
    });
  </script>
</body>
</html>

