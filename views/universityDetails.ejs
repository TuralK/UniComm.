<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>University Details</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
  <link rel="stylesheet" href="/home.css">
  <link rel="stylesheet" href="/universityDetails.css">
</head>
<body>
	<header>
		<%- include('./nav') %>
	</header>

  <main class="main">
    <div class="main__content">
      <h1 class="main__title"><%= university.uni_name %></h1>
      
      <!-- Section for university details -->
      <div class="university-details">
        <!-- Add more university details here -->
      </div>

      <h2>Ask a Question</h2>
      <form action="/askQuestion" method="POST">
        <input type="hidden" name="uni_id" value="<%= university.uni_id %>">
        <div class="form-group">
          <textarea class="form-control" name="question_text" rows="3" placeholder="Ask your question here..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <h2>Questions</h2>
      <ul class="questions-list">
        <% if (questions && questions.length) { %>
          <% questions.forEach(question => { %>
            <li class="question-item">
              <p><%= question.question_text %> (Asked on <%= question.created_at.toDateString() %>)</p>
              <ul class="answers-list">
                <% if (question.Answers && question.Answers.length) { %>
                  <% question.Answers.forEach(answer => { %>
                    <li class="answer-item"><%= answer.answer_text %> (Answered by <%= answer.Student.username %> on <%= answer.created_at.toDateString() %>)</li>
                  <% }) %>
                <% } else { %>
                  <li>No answers yet.</li>
                <% } %>
              </ul>
              <% if (user && userType === 'student' && user.university_id === university.uni_id) { %>
                <form action="/answerQuestion" method="POST">
                  <input type="hidden" name="question_id" value="<%= question.question_id %>">
                  <div class="form-group">
                    <textarea class="form-control" name="answer_text" rows="2" placeholder="Write your answer here..." required></textarea>
                  </div>
                  <button type="submit" class="btn btn-success">Submit Answer</button>
                </form>
              <% } %>
            </li>
          <% }) %>
        <% } else { %>
          <li>No questions have been asked yet.</li>
        <% } %>
      </ul>
    </div>
  </main>

  <script src="/home.js"></script>
  <script src="/uni_background.js"></script>
</body>
</html>
